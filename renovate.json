{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests"
  ],
  "platformAutomerge": true,
  "pre-commit": {
    "enabled": true
  },
  "enabledManagers": [
    "github-actions",
    "pre-commit",
    "terraform",
    "custom.regex"
  ],
  "terraform": {
    "managerFilePatterns": [
      "/^/terraform/.*\\.tf$/"
    ]
  },
  "prHourlyLimit": 20,
  "prConcurrentLimit": 20,
  "labels": [
    "dependencies",
    "renovate"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "aws-eks-addon"
      ]
    },
    {
      "matchManagers": ["custom.regex"],
      "matchDepNames": [
        "Terraform Version"
      ],
      "groupName": "Terraform Version"
    },
    {
      "matchManagers": ["terraform"],
      "matchDepTypes": [
        "required_version"
      ],
      "rangeStrategy": "bump",
      "groupName": "Terraform required_version"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/.*cluster-infrastructure\\/main\\.tf/"
      ],
      "matchStrings": [
        "(?<depName>kube-proxy|metrics-server|vpc-cni|coredns|kube-state-metrics)\\s+=\\s+\\{\\s+addon_version\\s+=\\s+\"(?<currentValue>[a-zA-Z0-9-_.]+)\""
      ],
      "packageNameTemplate": "{\"kubernetesVersion\": \"1.33\", \"addonName\": \"{{depName}}\", \"region\": \"eu-west-1\"}",
      "depNameTemplate": "{{depName}}",
      "datasourceTemplate": "aws-eks-addon",
      "versioningTemplate": "aws-eks-addon"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/.*tfc-configuration\\/variables\\.tf/",
        "/.*ws\\/variables\\.tf/"
      ],
      "matchStrings": [
        "default\\s+=\\s+\"~>\\s+(?<currentValue>[0-9.]+)\""
      ],
      "packageNameTemplate": "hashicorp/terraform",
      "depNameTemplate": "Terraform Version",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "github-releases"
    }
  ]
}
