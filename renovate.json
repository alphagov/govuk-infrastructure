{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "platformAutomerge": true,
  "terraform":{
    "commitMessageTopic": "Terraform {{depName}}",
    "fileMatch": [
      "\\.tf$"
    ],
    "packageRules": [
      {
        "matchDepTypes": ["helm_release", "provider", "tfe_workspace"]
      }
    ]
  }
}
